<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EQActivity" >

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/is_equaliser_on"
        android:layout_toLeftOf="@+id/eqVerticalSeekBar1"
        android:checked="true" />

    <com.islandmonkey.eqeq.VerticalSeekBar
        android:id="@+id/eqVerticalSeekBar1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignTop="@+id/eqVerticalSeekBar2"
        android:layout_marginLeft="87dp"
        android:max="4"
        android:progress="2" />

	<com.islandmonkey.eqeq.VerticalSeekBar
	    android:id="@+id/eqVerticalSeekBar2"
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:layout_below="@+id/checkBox1"
	    android:layout_marginLeft="12dp"
	    android:layout_toRightOf="@+id/eqVerticalSeekBar1"
	    android:max="4"
	    android:progress="2" />

	<com.islandmonkey.eqeq.VerticalSeekBar
	    android:id="@+id/eqVerticalSeekBar3"
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:layout_alignTop="@+id/eqVerticalSeekBar2"
	    android:layout_marginLeft="12dp"
	    android:layout_toRightOf="@+id/eqVerticalSeekBar2"
	    android:max="4"
	    android:progress="2" />

		<com.islandmonkey.eqeq.VerticalSeekBar
		    android:id="@+id/eqVerticalSeekBar4"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_alignTop="@+id/eqVerticalSeekBar3"
		    android:layout_marginLeft="12dp"
		    android:layout_toRightOf="@+id/eqVerticalSeekBar3"
		    android:max="4"
		    android:progress="2" />

		<com.islandmonkey.eqeq.VerticalSeekBar
		    android:id="@+id/eqVerticalSeekBar5"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_alignTop="@+id/eqVerticalSeekBar4"
		    android:layout_marginLeft="12dp"
		    android:layout_toRightOf="@+id/eqVerticalSeekBar4"
		    android:max="4"
		    android:progress="2" />

		<Spinner
		    android:id="@+id/spinner"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignTop="@+id/eqVerticalSeekBar1" />

</RelativeLayout>